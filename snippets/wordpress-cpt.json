{
	"WordPress | Creates a new Custom Post Type for Pages": {
		"prefix": "wpacptpag",
		"body": [
			"/**",
			" * Register Post Type PAGE ${3:Name CPT}",
			" *",
			" * @return void",
			" **/",
			"function ${1:function-prefix}_cpt_${2:post-type}() {",
			"\t\\$labels = array(",
			"\t\t'name'               => '${3:Name CPT}',",
			"\t\t'singular_name'      => '${4:Singular Name CPT}',",
			"\t\t'add_new'            => '${5:Add New} ${4:Singular Name CPT}',",
			"\t\t'add_new_item'       => '${5:Add New} ${4:Singular Name CPT}',",
			"\t\t'edit_item'          => '${6:Edit} ${4:Singular Name CPT}',",
			"\t\t'new_item'           => '${7:New} ${4:Singular Name CPT}',",
			"\t\t'view_item'          => '${8:View} ${4:Singular Name CPT}',",
			"\t\t'search_items'       => '${9:Search} ${3:Name CPT}',",
			"\t\t'not_found'          => '${10:Not found}',",
			"\t\t'not_found_in_trash' => '${11:Not found in trash}',",
			"\t);",
			"\t\\$args = array(",
			"\t\t'labels'             => \\$labels,",
			"\t\t'public'             => true,",
			"\t\t'publicly_queryable' => true,",
			"\t\t'show_ui'            => true,",
			"\t\t'query_var'          => true,",
			"\t\t'rewrite'            => array(",
			"\t\t\t'slug'       => '${12:slug}',",
			"\t\t\t'with_front' => false,",
			"\t\t),",
			"\t\t'has_archive'        => false,",
			"\t\t'capability_type'    => 'page',",
			"\t\t'hierarchical'       => true,",
			"\t\t'menu_position'      => 5,",
			"\t\t'menu_icon'          => 'dashicons-admin-users', // https://developer.wordpress.org/resource/dashicons/.",
			"\t\t'supports'           => array( 'title', 'editor', 'thumbnail', 'excerpt', 'page-attributes' ),",
			"\t);",
			"\tregister_post_type( '${2:post-type}', \\$args );",
			"}",
			"add_action( 'init', '${1:function prefix}_cpt_${2:post-type}' );"
		]
	},
