	"WordPress | Adds Custom columns in Admin Custom Post Type": {
		"prefix": "wpacptcol",
		"body": [
			"/**",
			" * Adds columns to post type marcas",
			" *",
			" * @param array $marcas_columns Header of admin post type list.",
			" * @return array $marcas_columns New elements for header.",
			" */",
			"function add_new_${1:post_type}_columns(\\$${1:post_type}_columns) {",
			"\t\\$new_columns['cb']    = '<input type=\"checkbox\" />';",
			"\t\\$new_columns['title'] = '';",
			"\t\\$new_columns['${2:variable}'] = '${3:columna}';",
			"",
			"\t\\$new_columns['wpseo-score']             = __( 'SEO', 'wordpress-seo' );",
			"\t\\$new_columns['wpseo-score-readability'] = __( 'Readability', 'wordpress-seo' );",
			"\t\\$new_columns['wpseo-title']             = __( 'SEO Title', 'wordpress-seo' );",
			"\t\\$new_columns['wpseo-metadesc']          = __( 'Meta Desc.', 'wordpress-seo' );",
			"\t\\$new_columns['wpseo-focuskw']           = __( 'Focus KW', 'wordpress-seo' );",
			"",
			"\treturn \\$new_columns;",
			"}",
			"add_filter( 'manage_edit-${1:post_type}_columns', 'add_new_${1:post_type}_columns' );",
			"",
			"/**",
			" * Add columns content",
			" *",
			" * @param array $column_name Column name of actual.",
			" * @param array $id Post ID.",
			" * @return void",
			" */",
			"function manage_${1:post_type}_columns(\\$column_name, \\$id) {",
			"\t\\$${2:variable} = get_post_meta( \\$id, '${2:variable}', true );",
			"",
			"\tswitch ( \\$column_name ) {",
			"\t\tcase '${2:variable}':",
			"\t\t\techo \\$${2:variable};",
			"\t\t\tbreak;",
			"",
			"\t\tdefault:",
			"\t\t\tbreak;",
			"\t\t} // end switch",
			"}",
			"add_action( 'manage_${1:post_type}_posts_custom_column', 'manage_${1:post_type}_columns', 10, 2 );"
		]
	},
	"WordPress | Register a taxonomy": {
		"prefix": "wpatax",
		"body": [
		  "/**",
		  " * Register Taxonomy ${1:name taxonomy plural}",
		  " *",
		  " */",
		  "function cmk_register_tax_${3:name taxonomy}() {",
		  "",
		  "\\$labels = array(",
		  "\t'name' => '${1:name taxonomy plural}',",
		  "\t'singular_name' => '${2:Taxonomy Name Singular}',",
		  "\t'search_items' =>  'Buscar ${2:Taxonomy Name Singular}',",
		  "\t'all_items' => 'Todos los ${1:name taxonomy plural}',",
		  "\t'edit_item' => 'Editar ${2:Taxonomy Name Singular}',",
		  "\t'update_item' => 'Actualizar ${2:Taxonomy Name Singular}',",
		  "\t'add_new_item' => 'AÃ±adir nuevo ${2:Taxonomy Name Singular}',",
		  "\t'new_item_name' => 'Nuevo ${2:Taxonomy Name Singular}',",
		  ");",
		  "add_action( 'init', 'cmk_register_tax_${3:name taxonomy}', 0 );",
		  "",
		  "register_taxonomy( '${3:name taxonomy}', array( '${4:post-type}' ), array(",
		  "\t'hierarchical' => true,",
		  "\t'labels' => \\$labels,",
		  "\t'show_ui' => true,",
		  "\t'show_admin_column' => true,",
		  "\t'query_var' => true,",
		  "\t'rewrite' => array( 'slug' => '${5:slug taxonomy}' ),",
		  "));",
		  "}"
		]
	}
