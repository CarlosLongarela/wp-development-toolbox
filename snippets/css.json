	"CSS | Adds Grid container for Columns and rows": {
		"prefix": "cssagrid",
		"body": [
		  ".${1:css-container} {",
		  "\tdisplay: grid;",
		  "\tgrid-column-gap: ${2:column-gap};",
		  "\tgrid-row-gap: ${3:row-gap};",
		  "\tgrid-template-columns: 1fr 1fr 1fr 1fr 1fr;",
		  "}"
		]
	},
	"CSS | Adds Flexbox Row Wrap": {
		"prefix": "cssaflexr",
		"body": [
			".${1:wrap-name-flex} {",
			"\tdisplay: -ms-flexbox;",
			"\tdisplay: flex;",
			"\tflex-wrap: nowrap;",
			"\tjustify-content: center;",
			"}"
		],
		"description": "CSS | Adds Flexbox Row Wrap"
	},
	"CSS | Adds Flexbox Column Wrap": {
		"prefix": "cssaflexc",
		"body": [
			".${1:wrap-name-flex} {",
			"\tdisplay: -ms-flexbox;",
			"\tdisplay: flex;",
			"\tflex-wrap: nowrap;",
			"\tflex-direction: column;",
			"\talign-items: center;",
			"}"
		],
		"description": "CSS | Adds Flexbox Column Wrap"
	},
	"WooCommerce | Removes Spin from input": {
		"prefix": "woorspin",
		"body": [
			"/* ## WooCommerce Advanced Quantity",
			"--------------------------------------------- */",
			"input[type='number'] {",
			"\t-moz-appearance:textfield;",
			"}",
			"",
			"input::-webkit-outer-spin-button,",
			"input::-webkit-inner-spin-button {",
			"\t-webkit-appearance: none;",
			"}"
		]
	},
