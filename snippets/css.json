	"CSS | Adds Grid container for Columns and rows": {
		"prefix": "cssagrid",
		"body": [
		  ".${1:css-container} {",
		  "\tdisplay: grid;",
		  "\tgrid-column-gap: ${2:column-gap};",
		  "\tgrid-row-gap: ${3:row-gap};",
		  "\tgrid-template-columns: 1fr 1fr 1fr 1fr 1fr;",
		  "}"
		]
	},
	"WooCommerce | Removes Spin from input": {
		"prefix": "woorspin",
		"body": [
			"/* ## WooCommerce Advanced Quantity",
			"--------------------------------------------- */",
			"input[type='number'] {",
			"\t-moz-appearance:textfield;",
			"}",
			"",
			"input::-webkit-outer-spin-button,",
			"input::-webkit-inner-spin-button {",
			"\t-webkit-appearance: none;",
			"}"
		]
	},
	"CSS | Adds Flex Box container": {
		"prefix": "cssaflx",
		"body": [
			".${1:name-container} {",
			"\tdisplay:flex;",
			"\tflex-direction: ${1:flex-direction}; // column or row",
			"\tflex-wrap: wrap;",
			"}"
